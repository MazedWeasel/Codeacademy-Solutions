class BankAccount():
  balance = 0
  def __init__(self,name):
    self.name = name
    
  def __repr__(self):
    return "This bank account belongs to %s. The balance is %.2fâ‚¬" %(self.name , self.balance)
  
  def show_balance(self):
    print "Balance: %.2f" %self.balance
  
  def deposit(self,amount):
    if amount <= 0:
      print "That amount is invalid."
      return
    else:
      print "Your deposit: %.2f" %(amount)
      self.balance += amount
      print self.show_balance()  
    
  def withdraw(self,amount):
    if amount <= 0 or amount > self.balance:
      print "Amount is either too big or too small."
      return
    else:
      print "Your withdrawal: %.2f" %(amount)
      self.balance -= amount
      print self.balance
      
my_account = BankAccount("Mathis")
print my_account
my_account.show_balance()
my_account.deposit(2000)
my_account.withdraw(1000)
print my_account
